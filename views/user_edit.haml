%form{:action => '/user', :method => 'post'}
  %label{:for => 'name'} Username:
  %input#name{:type => 'text', :name => 'name', :value => @user.name}/
  %br/

  %label{:for => 'extension'} Extension:
  %input#extension{:type => 'text', :name => 'extension', :value => @user.extension}/
  %br/

  %label{:for => 'trunk'} Trunk:
  %input#trunk{:type => 'text', :name => 'trunk', :value => @user.trunk}/
  %br/

  %label{:for => 'callerid_name'} CallerID Name:
  %input#callerid_name{:type => 'text', :name => 'callerid_name', :value => @user.callerid_name}/
  %br/

  %label{:for => 'callerid_number'} CallerID Number:
  %input#callerid_number{:type => 'text', :name => 'callerid_number', :value => @user.callerid_number}/
  %br/

  %label{:for => 'password'} Old Password:
  %input#password{:type => 'password', :name => 'password'}/
  %br/
  
  %label{:for => 'new_password'} New Password:
  %input#new_password{:type => 'password', :name => 'new_password'}/
  %br/
  
  %span.label Admin:
  - if @user.admin == true
    %label.radio{:for => 'admin-true'} Yes
    %input#admin-true{:type => 'radio', :name => 'admin', :value => 'true', :checked => 'checked'}
    %label.radio{:for => 'admin-false'} No
    %input#admin-false{:type => 'radio', :name => 'admin', :value => 'false'}
  - else
    %label.radio{:for => 'admin-true'} Yes
    %input#admin-true{:type => 'radio', :name => 'admin', :value => 'true'}
    %label.radio{:for => 'admin-false'} No
    %input#admin-false{:type => 'radio', :name => 'admin', :value => 'false', :checked => 'checked'}
  %br/
  
  %input{:type => 'hidden', :name => 'id', :value => @user.id}
  %input{:type => 'hidden', :name => '_method', :value => 'put'}
  
  %input{:type => 'submit', :value => 'Edit User'}